<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:showIn="@layout/activity_main">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_alignParentStart="true"
                android:text="@string/app_name"
                android:textSize="@dimen/toolbar_title_size"
                android:layout_marginStart="@dimen/toolbar_title_margin"
                android:textColor="@color/app_theme" />

        <ImageView
                android:id="@+id/profile"
                android:layout_width="@dimen/navigation_icons_size"
                android:layout_height="@dimen/navigation_icons_size"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/toolbar_icon_margin"
                android:src="@drawable/profile_icon" />
    </RelativeLayout>

</Toolbar>